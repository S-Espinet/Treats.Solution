@{
  Layout = "_Layout";
}

@using SweetAndSavory.Models;
@model List<SweetAndSavory.Models.Treat>;

<h1>Treats</h1>

@if (@Model.Count == 0)
{
  <h3> No treats are avilable yet!</h3>
}

<ul>
  @foreach(Treat treat in Model)
  {
    <li>@Html.ActionLink($"{treat.TreatName}", "Details", new { id = treat.TreatId })</li>
  }
</ul>

<p>@Html.ActionLink("Add New Treat", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>