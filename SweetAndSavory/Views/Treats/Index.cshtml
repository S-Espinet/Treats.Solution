@{
  Layout = "_Layout";
}

@using SweetAndSavory.Models;
@model List<SweetAndSavory.Models.Treat>;

<h2>Treats</h2>

@if (@Model.Count == 0)
{
  <h3> No treats are avilable yet!</h3>
}

<ul>
  @foreach(Treat treat in Model)
  {
    <li>@Html.ActionLink($"{treat.TreatName}", "Details", new { id = treat.TreatId }) || @Html.DisplayFor(model => treat.Price)</li>
  }
</ul>
<button class="btn-light">@Html.ActionLink("Add a New Treat", "Create")</button>