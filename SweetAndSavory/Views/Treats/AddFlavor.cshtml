@{
  Layout = "_Layout";
}

@model SweetAndSavory.Models.Treat

<h2>Add a Flavor</h2>

<h4>Add a flavor for this treat: @Html.DisplayFor(model => model.TreatName)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.TreatId)

  @Html.Label("Select Flavor")
  @Html.DropDownList("FlavorId")

  <input type="submit" class="btn btn-light" value="Save" />
}