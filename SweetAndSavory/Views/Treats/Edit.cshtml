@{
  Layout = "_Layout";
}

@model SweetAndSavory.Models.Treat

<div>
  <h2>Edit</h2>
</div>

<h4>Edit this treat's details: @Html.DisplayFor(model => model.TreatName)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.TreatId)

  @Html.LabelFor(model => model.TreatName)
  @Html.EditorFor(model => model.TreatName)
  @Html.LabelFor(model => model.Price)
  @Html.EditorFor(model => model.Price)

  <input type="submit" class="btn btn-light" value="Save" />
}