@{
  Layout = "_Layout";
}

@model SweetAndSavory.Models.Flavor

<h2>Flavor Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.FlavorDescription): @Html.DisplayFor(model => model.FlavorDescription)</h3>
@if (Model.JoinEntities.Count == 0)
{
  <p>No treats currently available in this flavor.</p>
} 
else
{
  <h5>Treats in this flavor: </h5>
    <ul>
      @foreach(var join in Model.JoinEntities)
      {
        @using (Html.BeginForm("DeleteTreat", "Flavors"))
        {  
          @Html.Hidden("joinId", @join.FlavorTreatId);
          <li>@join.Treat.TreatName || <input type="submit" value="Delete" style="font-size:.6em; padding:.25em" class="btn btn-xs btn-dark"/></li>
        }
      }
    </ul>
}
<button class="btn-light">@Html.ActionLink("Edit Flavor", "Edit", new { id = Model.FlavorId })</button>
<button class="btn-light">@Html.ActionLink("Delete Flavor", "Delete", new { id = Model.FlavorId })</button>
<button class="btn-light">@Html.ActionLink("Add a Treat", "AddTreat", new { id = Model.FlavorId })</button>