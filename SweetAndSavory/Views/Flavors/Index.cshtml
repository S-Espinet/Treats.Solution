@{
  Layout = "_Layout";
}

@using SweetAndSavory.Models;
@model List<SweetAndSavory.Models.Flavor>;

<div class="jumbotron">
  <h1>Flavors</h1>
</div>

@if (@Model.Count == 0)
{
  <h3> No flavors are currently available!</h3>
}

@foreach (Flavor flavor in Model)
{
  <li>@Html.ActionLink($"{flavor.FlavorDescription}", "Details", new { id = flavor.FlavorId })</li>
}

<p>@Html.ActionLink("Add New Flavor", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>