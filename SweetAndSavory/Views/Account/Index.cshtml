@{
  Layout = "_Layout";
}

@using System.Security.Claims

<h2>Authentication with Identity</h2>
<hr />
@if (User.Identity.IsAuthenticated)
{
  <p>Hello @User.Identity.Name!</p>
  @using (Html.BeginForm("LogOff", "Account"))
  {
    <input type="submit" class ="btn btn-dark" value="Log out" />
  }
}
else
{
  <button class="btn-dark">@Html.ActionLink("Register", "Register")</button>
  <button class="btn-dark">@Html.ActionLink("Log in", "Login")</button>
}