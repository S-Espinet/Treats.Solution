@{
  Layout = "_Layout";
}

<div class="jumbotron">
  <h1>Pierre's Sweet and Savory Treats</h1>
</div>

@using SweetAndSavory.ViewModels;
@using SweetAndSavory.Models;
@model IndexDisplayViewModel

<h4>Flavors</h4>
@foreach(Flavor flavor in Model.Flavors)
{
  <ul>
    <li>@Html.ActionLink($"{flavor.FlavorDescription}", "Details", "Flavors", new { id = flavor.FlavorId })</li>
  </ul>
}

<h4>Treats</h4>
@foreach(Treat treat in Model.Treats)
{
  <ul>
    <li>@Html.ActionLink($"{treat.TreatName}", "Details", "Treats", new { id = treat.TreatId }) || @Html.DisplayFor(model => treat.Price)</li>
  </ul>
}
<button class="btn-dark">@Html.ActionLink("Create an Account", "Index", "Account")</button>